@model IEnumerable<ETicaret.DB.Products>

@{
    ViewBag.Title = "Ürünler ";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Yeni Ürün", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Ürün Adı")
        </th>
        
        <th>
            @Html.DisplayName("Fiyatı")
        </th>
        <th>
            @Html.DisplayName("Categorisi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categories.Name)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
